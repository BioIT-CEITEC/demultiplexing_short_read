          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "illumina_basemask": {
        "label": "Additional options to bcl2fastq call",
        "type": "string",
