{
  "workflow_description": {
    "name":"demultiplexing_short_read",
    "version": 1.0,
    "label":"Demultiplexing of short-read run",
    "type":"run_demultiplexing",
    "inputs":"{run_dir}/*",
    "outputs":[
      "raw_fastq/{sample}*fastq*"
    ],
    "run_parameters": {
      "cpu": 30,
      "memory": 128
    },
    "run_outputs":[
      "{library}/sequencing_run_info/*"
    ]
  },
  "general_params": [
    "sample_name",
    "i7_name",
    "i7_sequence",
    "i5_name",
    "i5_sequence",
    "run_forward_read_length",
    "run_reverse_read_length",
    "run_dir",
    "run_date",
    "run_name",
    "run_sequencer_type"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
      "barcode_mismatches": {
       "label": "barcode_mismatches",
        "type": "int",
        "default": 0
      },
      "base_mask_field": {
       "label": "Base mask field",
        "type": "string",
        "default": ""
      },
      "no_lane_splitting": {
        "label": "No lane splitting",
        "type": "bool",
        "default": true
      },
      "additional_options": {
        "label": "Additional options to bcl2fastq call",
        "type": "string",
        "default": ""
      },
      "check_adaptors": {
        "label": "Check adaptors by Minion",
        "type": "bool",
        "default": false
      },
      "min_adapter_matches": {
        "label": "Min length of adaptor match (Minion)",
        "type": "int",
        "default": 12,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "check_adaptors": true
            }
          }
        }
      }
    }
  }
}
