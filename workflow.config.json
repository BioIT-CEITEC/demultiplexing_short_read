{
  "workflow_description": {
    "name":"demultiplexing_short_read",
    "version": 1.0,
    "label":"Demultiplexing of short-read run",
    "type":"run_demultiplexing",
    "inputs":[
      "../Raw/{run_dir_name}/*",
      "{run_dir}/L01/BioInfo.csv"
    ],
    "outputs": [
      "raw_fastq/{sample}*fastq*"
    ],
    "run_parameters": {
      "cpu": 30,
      "memory": 128
    },
    "run_outputs":[
      "{library}/sequencing_run_info/*"
    ]
  },
  "general_params": [
    "sample_name",
    "i7_name",
    "i7_sequence",
    "i5_name",
    "i5_sequence",
    "run_forward_read_length",
    "run_reverse_read_length",
    "run_dir",
    "run_date",
    "run_name",
    "run_sequencer_type"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
      "specify_demultiplexing_detailed": {
        "label": "Specify demultiplexing details.",
        "type": "bool",
        "default": false
      },
      "barcode_mismatches": {
       "label": "barcode_mismatches",
        "type": "int",
        "default": 1,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "AVITI_R1FastQMask": {
       "label": "R1 Base mask field",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "AVITI_R2FastQMask": {
       "label": "R2 Base mask field",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "AVITI_I1Mask": {
       "label": "I1 Base mask field",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "AVITI_I2Mask": {
       "label": "I2 Base mask field",
        "type": "string",
        "default": "",
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "specify_demultiplexing_detailed": true
            }
          }
        }
      },
      "AVITI_UmiMask": {
       "label": "UMI Base mask field",
        "type": "string",
