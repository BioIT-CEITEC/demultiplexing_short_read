{
  "workflow_description": {
    "name":"demultiplexing_short_read",
    "version": 1.0,
    "label":"Demultiplexing of short-read run",
    "type":"run_demultiplexing",
    "inputs":[
      "../Raw/{run_dir}/",
      "{run_dir}/L01/BioInfo.csv"
    ],
    "outputs": [
      "raw_fastq/{sample}*fastq*"
    ],
    "run_parameters": {
      "cpu": 30,
      "memory": 128
    },
    "run_outputs":[
      "{library}/sequencing_run_info/*"
    ]
  },
  "general_params": [
    "sample_name",
    "i7_name",
    "i7_sequence",
    "i5_name",
    "i5_sequence",
    "run_forward_read_length",
    "run_reverse_read_length",
    "run_dir",
    "run_date",
    "run_name",
    "run_sequencer_type"
  ],
  "gui_params" : {
    "primary": {},
    "detailed": {
      "barcode_mismatches": {
       "label": "barcode_mismatches",
        "type": "int",
        "default": 1
      },
      "R1FastQMask": {
       "label": "R1 Base mask field",
        "type": "string",
        "default": ""
      },
      "R2FastQMask": {
       "label": "R2 Base mask field",
        "type": "string",
        "default": ""
      },
      "I1Mask": {
       "label": "I1 Base mask field",
        "type": "string",
        "default": ""
      },
      "I2Mask": {
       "label": "I2 Base mask field",
        "type": "string",
        "default": ""
      },
      "UmiMask": {
       "label": "UMI Base mask field",
        "type": "string",
        "default": ""
      },
      "select_lanes": {
        "label": "Select specific Lanes the library is loaded to.",
        "type": "bool",
        "default": false
      },
      "use_lane1": {
        "label": "Use Lane1",
        "info": "Demultiplex this library from Lane1 if it is available.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "select_lanes": true
            }
          }
        }
      },
      "use_lane2": {
        "label": "Use Lane2",
        "info": "Demultiplex this library from Lane2 if it is available.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "select_lanes": true
            }
          }
        }
      },
      "use_lane3": {
        "label": "Use Lane3",
        "info": "Demultiplex this library from Lane3 if it is available.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "select_lanes": true
            }
          }
        }
      },
      "use_lane4": {
        "label": "Use Lane4",
        "info": "Demultiplex this library from Lane4 if it is available.",
        "type": "bool",
        "default": true,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "select_lanes": true
            }
          }
        }
      },
      "additional_options": {
        "label": "Additional options to bcl2fastq call",
        "type": "string",
        "default": ""
      },
      "check_adaptors": {
        "label": "Check adaptors by Minion",
        "type": "bool",
        "default": false
      },
      "min_adapter_matches": {
        "label": "Min length of adaptor match (Minion)",
        "type": "int",
        "default": 12,
        "conditions": {
          "relevance": {
            "operand": "equal",
            "negation": false,
            "values": {
              "check_adaptors": true
            }
          }
        }
      }
    }
  }
}
